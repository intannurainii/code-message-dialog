    private void btnMsgDialogActionPerformed(java.awt.event.ActionEvent evt) {                                             
       getContentPane().setBackground(new java.awt.Color(102, 0, 0));
        btnMsgDialog = new javax.swing.JButton();
        JOptionPane.showMessageDialog(this, "Ini Adalah Kolom Pengisian Angka ");        
        btnConfirmDialog = new javax.swing.JButton();
        int jawab = JOptionPane.showConfirmDialog(this, "Apakah Kamu Yakin ?");
    
    // 0 : yes
    // 1 : no
    // 2 : cancel
    
    switch(jawab){
        case JOptionPane.CANCEL_OPTION:
            JOptionPane.showMessageDialog(this, "Kamu mejawab batal");
            break;
        case JOptionPane.NO_OPTION:
            JOptionPane.showMessageDialog(this, "Kamu menjawab tidak");
            break;
        case JOptionPane.YES_OPTION: 
            JOptionPane.showMessageDialog(this, "Kamu menjawab ya");
        
         btnInputDialog = new javax.swing.JButton();
        String inputan = JOptionPane.showInputDialog("Silahkan Masukkan Angka!");
           
        int bil = 0 ;
        
        if (bil%2==0){
            JOptionPane.showMessageDialog(this, " Yang Kamu Inputkan Adalah Bilangan Genap");
        }else {
             JOptionPane.showMessageDialog(this , " Yang Kamu Inputkan Adalah Bilangan Ganjil");
        }
       
    }
        
        // TODO add your handling code here:
    }                                            

